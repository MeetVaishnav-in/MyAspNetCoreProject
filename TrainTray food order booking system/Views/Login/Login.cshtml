@model TrainTray_food_order_booking_system.Models.LoginModel

@{
    ViewData["Title"] = "User Login";
}

<h2>Login</h2>

@if (ViewData.ModelState[""]?.Errors.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Login" asp-controller="Login" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <div class="mt-3">
        <a asp-action="ForgotPassword" asp-controller="ForgotPassword">Forgot Password?</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
